<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chadamine.growbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:vmSafeMode="false">
        <activity
            android:name="com.chadamine.growbuddy.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:uiOptions="splitActionBarWhenNarrow"
            android:name="com.chadamine.growbuddy.journal.JournalsActivity"
            android:label="@string/title_activity_main">
			
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
            
        </activity>
        <activity
            android:name="com.chadamine.growbuddy.analysis.AnalysisActivity"
            android:label="@string/title_activity_analysis" >
        </activity>
        <activity
            android:name="com.chadamine.growbuddy.cultivation.CultivationActivity"
            android:label="@string/title_activity_cultivation" >
        </activity>
        <activity
            android:name="com.chadamine.growbuddy.schedule.ScheduleActivity"
            android:label="@string/title_activity_schedule" >
        </activity>
         <provider
            android:name="com.chadamine.growbuddy.database.ItemContentProvider"
            android:authorities="com.chadamine.growbuddy.provider" />
    </application>

</manifest>
