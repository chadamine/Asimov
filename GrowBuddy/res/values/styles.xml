<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- <style name="AppBaseTheme" parent="android:Theme.AppCompat.Light">-->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <!-- Detail View Styles -->
    <style name="detail_text">
        <item name="android:layout_marginTop">30dp</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="detail_edit_text">
        <item name="android:layout_marginRight">15dp</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:ems">10</item>
    </style>
    <style name="detail_title_text">
        
    </style>
    
    
    <!-- Sortable List Box Styles -->
	<style name="list_item">
		<item name="android:background">#000000</item>
	</style>
	<style name="list_box_title_strip">
	</style>
	<style name="list_box">
		<item name="android:background">#74c2e1</item>
	</style>
	<style name="nav_row_title">
		<item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:textStyle">bold</item>
	</style>
	<style name="nav_row_detail">
	    <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:textStyle">bold</item>
	</style>
	<style name="nav_list_title">
		
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">5dp</item>
		<item name="android:background">#0191c8</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
	</style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
