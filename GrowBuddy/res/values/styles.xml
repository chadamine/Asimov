<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- <style name="AppBaseTheme" parent="android:Theme.AppCompat.Light">-->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <!-- Detail View Styles -->
    <style name="detail_text">
        <item name="android:layout_marginTop">30dp</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
	
    <style name="detail_edit_text">
		<!--
        <item name="android:layout_marginRight">15dp</item>
		<item name="android:layout_marginLeft">15dp</item>-->
		<item name="android:ems">10</item>
		<item name="android:background">@drawable/edit_text</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="detail_title_text">
        
    </style>
    
    
    <!-- Sortable List Box Styles -->
		<style name="title_text">
			<item name="android:textColor">#ffffff</item>
			<item name="android:textStyle">bold</item>
			<item name="android:textSize">14sp</item>
			<item name="android:paddingLeft">10dp</item>
			<item name="android:paddingRight">10dp</item>
		</style>
	<style name="list_item">
		<item name="android:background">#000000</item>
	</style>
	
	<style name="list_box_header_strip">
	    <item name="android:background">#0191c8</item>
		<item name="android:layout_marginBottom">1dp</item>
	</style>
	
	<style name="buttonTitle">
		<item name="android:background">#99ffffff</item>
	</style>
	
	<style name="image_box">
		<item name="android:layout_margin">20dp</item>
	</style>
	
	<style name="list_box">
		<item name="android:background">#74c2e1</item>
		<!-- <item name="android:popupBackground">@style/button</item> -->
	</style>
	<style name="list_box_deleted">
		<item name="android:background">@drawable/innerglow</item>
	</style>
	
	<style name="list_box_container_portrait">
		<!--<item name="android:background">#74c2e1</item>-->
		
		<!--<item name="android:layout_marginLeft">20dp</item>-->
		<!--<item name="android:layout_marginRight">20dp</item>-->
		<!--<item name="android:layout_marginBottom">20dp</item>-->
		<item name="android:layout_margin">5dp</item>
	</style>
	<style name="list_box_container_right">
	    <item name="android:layout_marginLeft">0dp</item>
	    <item name="android:layout_marginRight">5dp</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:layout_marginBottom">5dp</item>
	</style>
	<style name="list_box_container_bottom">
	    <item name="android:layout_marginLeft">5dp</item>
	    <item name="android:layout_marginRight">5dp</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:layout_marginBottom">0dp</item>
	</style>
	
	<style name="nav_row_title">
		<item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textStyle">bold</item>
	</style>
	
	<style name="nav_row_detail">
	    <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:textStyle">bold</item>
	</style>
	
	<style name="nav_list_title">	
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">5dp</item>
		<item name="android:background">#0191c8</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
	</style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
