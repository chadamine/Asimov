<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/relativePlantsList"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/list_box_container_portrait"
		android:layout_marginTop="30dp">

	    <RelativeLayout
	        android:id="@+id/relativePlantsTitleHeader"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/list_box_header_strip"
	        
	        >
	        
		<TextView
			android:id="@+id/textPlantsTitle"
			android:layout_height="30dp"
			android:layout_width="wrap_content"
			style="@style/nav_list_title"
			android:text="Plants"
			/>
		
	
		<Button 
		    android:id="@+id/buttonDeletePlants"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Delete Plants"
		    style="@style/title_text"
		    android:background="@drawable/button_background"
		    android:layout_alignTop="@id/textPlantsTitle"
		    android:layout_alignBottom="@id/textPlantsTitle"
		    android:layout_alignParentRight="true"
		    />
		<Button 
		    android:id="@+id/buttonAddPlant"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Add Nutrient"
		    style="@style/title_text"
		    android:background="@drawable/button_background"
		    android:layout_toLeftOf="@id/buttonDeletePlants"
		    android:layout_alignTop="@id/textJournalTitle"
		    android:layout_alignBottom="@id/textPlantsTitle"
		    
		    />
		</RelativeLayout>
		
		<ListView
			android:id="@android:id/list"
			style="@style/list_box"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/relativePlantsTitleHeader"
			android:layout_marginTop="1dp"
			android:dividerHeight="1dp"
			/>

	</RelativeLayout>

</RelativeLayout>

