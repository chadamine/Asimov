<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#dee7ef"
    tools:context="com.chadamine.growbuddy.MainActivity$PlaceholderFragment" >

    <!-- <RelativeLayout
        android:id="@+id/llNavigationTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#727b84"
        android:orientation="vertical"
        android:scrollbars="horizontal"
        >-->

      <TextView 
            android:id="@+id/tvNavTitle"
            
            android:layout_width="match_parent"
            android:layout_height="30dp"
            
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            
            android:background="#0191c8"
            
            android:layout_margin="0dp"
            android:paddingLeft="5dp"
            
            android:text="@string/nav_title"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="0"
            />
       
         <ListView
        	android:id="@+id/lvNavigation"
        	android:layout_width="match_parent"
        	android:layout_height="221dp"
        
        	android:layout_below="@id/tvNavTitle"
        	android:background="#74c2e1"

            android:layout_marginTop="1dp"
            
        	/>
          <Spinner 
            android:id="@+id/spNewsFilter"
            
            android:background="#0191c8"
            
            android:layout_width="match_parent"
            android:layout_height="30dp"
        	android:layout_marginRight="1dp"
        	android:layout_marginTop="20dp"
        	
        	android:layout_below="@id/lvNavigation"
            />
           <ListView
       		android:layout_width="match_parent"
			android:layout_height="223dp"
			android:id="@+id/lvNews"
			android:layout_below="@id/spNewsFilter" 
			android:background="#74c2e1"
		
			/>
        
   <!-- </RelativeLayout>-->
   
    
   
        
</RelativeLayout>
